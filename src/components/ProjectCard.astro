---
interface Props {
  title: string;
  description: string;
  tech: string[];
  github?: string;
  live?: string;
  stars?: number;
  index: number;
}

const { title, description, tech, github, live, stars, index } = Astro.props;
const paddedIndex = String(index + 1).padStart(2, "0");
---

<div class="project slide-up" style={`animation-delay: ${index * 0.1}s`}>
  <div class="project-number">{paddedIndex}</div>

  <div class="project-content">
    <div class="project-info">
      <div class="project-meta">
        <span class="project-tech">{tech.join(", ")}</span>
      </div>

      <h3>{title}</h3>

      <p class="project-description">{description}</p>

      <div class="project-links">
        {
          github && (
            <a
              href={github}
              target="_blank"
              rel="noopener noreferrer"
              class="project-link"
            >
              github
            </a>
          )
        }
        {
          live && (
            <a
              href={live}
              target="_blank"
              rel="noopener noreferrer"
              class="project-link"
            >
              live site
            </a>
          )
        }
        {
          github && (
            <span
              class="star-badge"
              aria-label={`${stars ?? 0} stars`}
              data-github={github}
              data-stars={stars ?? 0}
              data-role="star-badge"
            >
              <svg viewBox="0 0 24 24" aria-hidden="true">
                <path d="M12 .587l3.668 7.431L23.4 9.75l-5.7 5.556L19.335 24 12 19.897 4.665 24l1.634-8.694L.6 9.75l7.732-1.732z" />
              </svg>
              <span class="star-count">{stars ?? 0}</span>
            </span>
          )
        }
      </div>
    </div>
  </div>
</div>

<style>
  .project {
    padding: 2rem 0;
    border-bottom: 1px solid var(--border-color);
    position: relative;
    transition: var(--transition-smooth);
  }

  .project:last-child {
    border-bottom: none;
  }

  .project:hover {
    transform: translateX(4px);
  }

  .project-number {
    position: absolute;
    top: 0.5rem;
    right: 0;
    font-size: 4rem;
    font-weight: 900;
    color: var(--accent-color-alpha);
    line-height: 1;
    pointer-events: none;
    transition: var(--transition-smooth);
  }

  .project:hover .project-number {
    color: var(--accent-color);
    opacity: 0.2;
  }

  .project-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
    align-items: center;
  }

  .project-info {
    padding: 0;
  }

  .project-info h3 {
    font-size: var(--font-size-x-large);
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    color: var(--primary-text);
    letter-spacing: -0.02em;
    line-height: 1.2;
  }

  .project-meta {
    display: flex;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
  }

  .project-tech {
    background: transparent;
    color: var(--accent-color);
    padding: 0;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    border: none;
    font-family: var(--font-mono);
  }

  .project-description {
    color: var(--secondary-text);
    line-height: 1.7;
    margin-bottom: 1rem;
    font-size: var(--font-size-small);
    font-weight: 400;
  }

  .project-links {
    display: flex;
    gap: 0.5rem;
    align-items: center;
    flex-wrap: wrap;
  }

  .project-link {
    color: var(--accent-color);
    text-decoration: none !important;
    font-size: var(--font-size-small);
    font-weight: 600;
    padding: 0.3rem 0.65rem;
    border-radius: 999px;
    background: var(--accent-color-alpha);
    transition: var(--transition-smooth);
  }

  .project-link:hover {
    background: var(--accent-color);
    color: var(--bg-color);
    text-decoration: none !important;
    opacity: 1;
  }

  .star-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.3rem;
    background: var(--hover-bg);
    color: var(--secondary-text);
    font-size: 0.8rem;
    font-weight: 600;
    padding: 0.25rem 0.5rem;
    border-radius: 999px;
    border: 1px solid var(--border-color);
  }

  .star-badge svg {
    width: 0.75rem;
    height: 0.75rem;
    fill: currentColor;
  }

  @media (max-width: 768px) {
    .project {
      padding: 1.5rem 0;
    }

    .project-number {
      font-size: 3rem;
    }
  }
</style>
