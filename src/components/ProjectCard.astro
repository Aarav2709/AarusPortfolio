---
interface Props {
  title: string;
  description: string;
  tech: string[];
  github?: string;
  live?: string;
  stars?: number;
  index: number;
}

const { title, description, tech, github, live, stars, index } = Astro.props;
const paddedIndex = String(index + 1).padStart(2, '0');
---

<div class="project slide-up" style={`animation-delay: ${index * 0.1}s`}>
  <div class="project-number">{paddedIndex}</div>

  <div class="project-content">
    <div class="project-info">
      <div class="project-meta">
        <span class="project-tech">{tech.join(', ')}</span>
      </div>

      <h3>{title}</h3>

      <p class="project-description">{description}</p>

      <div class="project-links">
        {github && (
          <a href={github} target="_blank" rel="noopener noreferrer" class="project-link">
            github
          </a>
        )}
        {live && (
          <a href={live} target="_blank" rel="noopener noreferrer" class="project-link">
            live site
          </a>
        )}
        {stars !== undefined && stars > 0 && (
          <span class="star-badge" aria-label={`${stars} stars`}>
            <svg viewBox="0 0 24 24" aria-hidden="true">
              <path d="M12 .587l3.668 7.431L23.4 9.75l-5.7 5.556L19.335 24 12 19.897 4.665 24l1.634-8.694L.6 9.75l7.732-1.732z"></path>
            </svg>
            <span class="star-count">{stars}</span>
          </span>
        )}
      </div>
    </div>
  </div>
</div>

<style>
  .project {
    padding: 64px 0;
    border-bottom: 1px solid var(--border-color);
    position: relative;
    transition: var(--transition-bounce);
  }

  .project:last-child {
    border-bottom: none;
  }

  .project:hover {
    transform: translateY(-4px);
  }

  .project-number {
    position: absolute;
    top: -40px;
    right: 0;
    font-size: 120px;
    font-weight: 100;
    color: var(--tertiary-text);
    line-height: 1;
    pointer-events: none;
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .project:hover .project-number {
    transform: translateY(-6px);
  }

  .project-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 56px;
    align-items: center;
  }

  .project-info {
    padding: 0 24px;
  }

  .project-info h3 {
    font-size: calc(var(--text-size) * 1.7);
    font-weight: 300;
    margin: 0 0 20px 0;
    color: var(--primary-text);
    letter-spacing: -0.02em;
    line-height: 1.1;
  }

  .project-meta {
    display: flex;
    gap: 20px;
    margin-bottom: 30px;
  }

  .project-tech {
    background: transparent;
    color: var(--tertiary-text);
    padding: 0;
    font-size: 12px;
    font-weight: 400;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    border: none;
  }

  .project-description {
    color: var(--secondary-text);
    line-height: 1.6;
    margin-bottom: 28px;
    font-size: 16px;
    font-weight: 300;
  }

  .project-links {
    display: flex;
    gap: 12px;
    align-items: center;
    flex-wrap: wrap;
  }

  .project-link {
    color: var(--primary-text);
    text-decoration: none;
    font-size: 14px;
    font-weight: 400;
    letter-spacing: 0.02em;
    position: relative;
    transition: var(--transition-smooth);
  }

  .project-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background: var(--primary-text);
    transition: width 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .project-link:hover::after {
    width: 100%;
  }

  .star-badge {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    background: rgba(0, 0, 0, 0.06);
    color: var(--primary-text);
    font-size: 13px;
    padding: 4px 8px;
    border-radius: 12px;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.04);
  }

  [data-theme='dark'] .star-badge {
    background: rgba(255, 255, 255, 0.06);
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.45);
  }

  .star-badge svg {
    width: 14px;
    height: 14px;
    fill: currentColor;
  }

  @media (max-width: 768px) {
    .project {
      padding: 40px 0;
    }

    .project-number {
      font-size: 80px;
    }

    .project-info {
      padding: 0;
    }
  }
</style>
